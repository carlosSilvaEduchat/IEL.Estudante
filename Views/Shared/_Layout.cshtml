<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - IEL.Estudantes</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/dashboard.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
</head>
<body>
    <div class="wrapper">
        <!-- Sidebar -->
        <aside class="sidebar">
            <div class="sidebar-header">
                <img src="~/logo.png" alt="Logo IEL" class="logo" />
                <h5 class="mb-0">IEL.Estudantes</h5>
            </div>
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Estudantes" asp-action="Index">
                        <i class="fas fa-users me-2"></i> Estudantes
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Estudantes" asp-action="Create">
                        <i class="fas fa-user-plus me-2"></i> Novo Estudante
                    </a>
                </li>
            </ul>
        </aside>
        
        <!-- Topbar -->
        <header class="topbar">
            <div class="d-flex align-items-center">
                <button id="sidebar-toggle" class="btn btn-link text-decoration-none me-3 d-lg-none">
                    <i class="fas fa-bars"></i>
                </button>
                <h1 class="h4 mb-0 me-3">@ViewData["Title"]</h1>
                
                <form class="d-none d-md-flex ms-auto" id="searchForm" asp-controller="Estudantes" asp-action="Index" method="get">
                    <div class="input-group" style="max-width: 300px;">
                        <input type="text" 
                               class="form-control form-control-sm" 
                               id="searchString" 
                               name="searchString" 
                               placeholder="Pesquisar estudantes..." 
                               value="@Context.Request.Query["searchString"]"
                               aria-label="Pesquisar">
                        <button class="btn btn-primary btn-sm" type="submit">
                            <i class="fas fa-search"></i>
                        </button>
                    </div>
                </form>
            </div>
            
            <div class="d-lg-none" id="mobileMenu" style="display: none;">
                <div class="d-flex flex-column bg-white p-2 rounded shadow mt-2">
                    <a class="nav-link" asp-controller="Estudantes" asp-action="Index">
                        <i class="fas fa-users me-2"></i> Estudantes
                    </a>
                    <a class="nav-link" asp-controller="Estudantes" asp-action="Create">
                        <i class="fas fa-user-plus me-2"></i> Novo Estudante
                    </a>
                </div>
            </div>
        </header>
        
        <!-- Main Content -->
        <main class="main-content">
            <div class="container-fluid py-3">
                @RenderBody()
            </div>
        </main>
        
        <!-- Footer -->
        <footer class="footer mt-auto py-3">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-12 text-center">
                        <span class="text-muted">&copy; @DateTime.Now.Year IEL.Estudantes</span>
                    </div>
                </div>
            </div>
        </footer>
    </div>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/theme.js" asp-append-version="true"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.16/jquery.mask.min.js"></script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>