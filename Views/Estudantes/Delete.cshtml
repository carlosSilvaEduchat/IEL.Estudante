@model IEL.Estudantes.Models.Estudante

@{
    ViewData["Title"] = "Excluir Estudante";
    ViewData["ActivePage"] = "Estudantes";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 mb-0 text-gray-800">Excluir Estudante</h1>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="fas fa-arrow-left me-1"></i> Voltar para a lista
    </a>
</div>

<div class="card shadow mb-4">
    <div class="card-header py-3 bg-danger text-white">
        <h6 class="m-0 font-weight-bold">
            <i class="fas fa-exclamation-triangle me-2"></i>Confirmar Exclusão
        </h6>
    </div>
    <div class="card-body">
        <div class="alert alert-danger">
            <h5 class="alert-heading">
                <i class="fas fa-exclamation-circle me-2"></i>Atenção!
            </h5>
            <p class="mb-0">
                Você está prestes a excluir permanentemente o registro do estudante abaixo. 
                Esta ação não poderá ser desfeita. Deseja continuar?
            </p>
        </div>
        
        <div class="row">
            <div class="col-md-4 text-center mb-4 mb-md-0">
                <div class="bg-danger bg-opacity-10 d-inline-flex align-items-center justify-content-center rounded-circle mb-3" style="width: 120px; height: 120px;">
                    <i class="fas fa-user-graduate fa-3x text-danger"></i>
                </div>
                <h5>@Html.DisplayFor(model => model.Nome)</h5>
                <span class="badge bg-danger">Estudante</span>
            </div>
            
            <div class="col-md-8">
                <div class="table-responsive">
                    <table class="table table-bordered">
                        <tbody>
                            <tr>
                                <th class="w-25">@Html.DisplayNameFor(model => model.Nome)</th>
                                <td>@Html.DisplayFor(model => model.Nome)</td>
                            </tr>
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.CPF)</th>
                                <td class="cpf-mask">@Html.DisplayFor(model => model.CPF)</td>
                            </tr>
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.Endereco)</th>
                                <td>@(string.IsNullOrEmpty(Model.Endereco) ? "-" : Model.Endereco)</td>
                            </tr>
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.DataConclusao)</th>
                                <td>@(Model.DataConclusao.HasValue ? Model.DataConclusao.Value.ToString("dd/MM/yyyy") : "-")</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        
        <div class="alert alert-warning mt-4">
            <div class="d-flex align-items-center">
                <div class="flex-shrink-0">
                    <i class="fas fa-info-circle fa-2x me-3"></i>
                </div>
                <div>
                    <h5 class="alert-heading">Importante!</h5>
                    <p class="mb-0">
                        Ao confirmar a exclusão, todos os dados relacionados a este estudante serão permanentemente removidos do sistema. 
                        Certifique-se de que esta é a ação desejada antes de prosseguir.
                    </p>
                </div>
            </div>
        </div>
        
        <form asp-action="Delete" class="mt-4">
            <input type="hidden" asp-for="Id" />
            <div class="d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left me-1"></i> Cancelar
                </a>
                <button type="submit" class="btn btn-danger">
                    <i class="fas fa-trash-alt me-1"></i> Confirmar Exclusão
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Aplicar máscara de CPF
            $('.cpf-mask').each(function() {
                let cpf = $(this).text().trim();
                if (cpf.length === 11) {
                    cpf = cpf.replace(/(\d{3})(\d{3})(\d{3})(\d{2})/, '$1.$2.$3-$4');
                    $(this).text(cpf);
                }
            });
        });
    </script>
}