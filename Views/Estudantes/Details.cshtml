@model IEL.Estudantes.Models.Estudante

@{
    ViewData["Title"] = "Detalhes do Estudante";
}

<h1>Detalhes do Estudante</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Nome)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Nome)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.CPF)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.CPF)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Endereco)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Endereco)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.DataConclusao)</dt>
        <dd class="col-sm-10">@Model.DataConclusao?.ToString("dd/MM/yyyy")</dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Editar</a>
    <a asp-action="Index" class="btn btn-secondary">Voltar para a lista</a>
</div>