@model IEnumerable<IEL.Estudantes.Models.Estudante>

@{
    ViewData["Title"] = "Estudantes";
}

<h1>Estudantes</h1>

<div class="card shadow mb-4">
    <div class="card-header py-3 d-flex justify-content-between align-items-center">
        <h6 class="m-0 font-weight-bold text-primary">Lista de Estudantes</h6>
        <a asp-action="Create" class="btn btn-primary btn-sm">
            <i class="fas fa-plus me-1"></i> Novo Estudante
        </a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered table-hover" width="100%" cellspacing="0">
                <thead class="table-light">
                    <tr>
                        <th>
                            <a asp-action="Index" asp-route-sortOrder="@ViewData["NameSortParm"]" class="text-decoration-none text-dark">
                                @Html.DisplayNameFor(model => model.Nome)
                                @if (ViewData["CurrentSort"]?.ToString() == "name_desc")
                                {
                                    <i class="fas fa-sort-down"></i>
                                }
                                else
                                {
                                    <i class="fas fa-sort"></i>
                                }
                            </a>
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CPF)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Endereco)
                        </th>
                        <th>
                            <a asp-action="Index" asp-route-sortOrder="@ViewData["DateSortParm"]" class="text-decoration-none text-dark">
                                @Html.DisplayNameFor(model => model.DataConclusao)
                                @if (ViewData["CurrentSort"]?.ToString() == "Date")
                                {
                                    <i class="fas fa-sort-down"></i>
                                }
                                else if (ViewData["CurrentSort"]?.ToString() == "date_desc")
                                {
                                    <i class="fas fa-sort-up"></i>
                                }
                                else
                                {
                                    <i class="fas fa-sort"></i>
                                }
                            </a>
                        </th>
                        <th class="text-center">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Any())
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                                <td class="cpf-mask">@Html.DisplayFor(modelItem => item.CPF)</td>
                                <td>@(item.Endereco?.Length > 30 ? item.Endereco.Substring(0, 30) + "..." : item.Endereco)</td>
                                <td>@(item.DataConclusao.HasValue ? item.DataConclusao.Value.ToString("dd/MM/yyyy") : "-")</td>
                                <td class="text-center">
                                    <div class="btn-group" role="group">
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary" title="Editar">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info text-white" title="Detalhes">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger" title="Excluir">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="text-center">Nenhum estudante encontrado.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    @* Pagination would go here *@
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Aplicar máscara de CPF
            $('.cpf-mask').each(function() {
                let cpf = $(this).text().trim();
                if (cpf.length === 11) {
                    cpf = cpf.replace(/(\d{3})(\d{3})(\d{3})(\d{2})/, '$1.$2.$3-$4');
                    $(this).text(cpf);
                }
            });

            // Inicializar tooltips
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[title]'));
            var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl);
            });
        });
    </script>
}